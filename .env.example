# Amazon Smart Agent - Environment Configuration Example
# Rename this file to .env and fill in your actual API keys and credentials

# Amazon Product Advertising API Credentials
AMAZON_ACCESS_KEY=your_access_key_here
AMAZON_SECRET_KEY=your_secret_key_here
AMAZON_ASSOCIATE_TAG=your_associate_tag_here
AMAZON_REGION=US

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Retail Store API Keys (if available)
WALMART_API_KEY=your_walmart_api_key_here
TARGET_API_KEY=your_target_api_key_here
EBAY_API_KEY=your_ebay_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///database/products.db

# Web Dashboard Configuration
DASHBOARD_PORT=8080
DASHBOARD_HOST=0.0.0.0

# Arbitrage Settings
MIN_ROI_THRESHOLD=40
MAX_REVIEWS=20
BSR_PERCENTILE=5

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/arbitrage_bot.log
